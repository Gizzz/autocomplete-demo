{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,

    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/client/**/*.spec.*",
    "src/client/**/*.test.*"
  ]
}
